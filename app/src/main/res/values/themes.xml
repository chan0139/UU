<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UU" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryVariant">@color/sub</item>
        <item name="colorOnPrimary">#696969</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!--custom font-family 적용-->
        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:buttonStyle">@style/customButtonFontStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/customSpinnerFontStyle</item>
        <item name="android:radioButtonStyle">@style/customRadioButtonFontStyle</item>
        <item name="android:checkboxStyle">@style/customCheckboxFontStyle</item>
    </style>

    <!-- Custom font 적용 -->
    <style name="customTextViewFontStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/font_family</item>
    </style>

    <style name="customButtonFontStyle" parent="@android:style/Widget.Button">
        <item name="android:fontFamily">@font/font_family</item>
    </style>

    <style name="customSpinnerFontStyle" parent="@android:style/Widget.DeviceDefault.DropDownItem.Spinner">
        <item name="android:fontFamily">@font/font_family</item>
    </style>

    <style name="customRadioButtonFontStyle" parent="android:Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/font_family</item>
    </style>

    <style name="customCheckboxFontStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/font_family</item>
    </style>
</resources>